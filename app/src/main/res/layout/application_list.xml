<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/application_list_layout"
    android:descendantFocusability="blocksDescendants">
     <ImageButton
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:id="@+id/locking_app"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/locking_app"
        android:layout_toRightOf="@+id/locking_app"
        android:id="@+id/app_name"/>
    <ImageView
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_toEndOf="@+id/app_name"
        android:layout_toRightOf="@+id/app_name"
        android:id="@+id/app_icon"
        />
</RelativeLayout>